
@inject IJSRuntime _js;
@code {
    public bool Visible { set { _js.InvokeVoidAsync("setVisible", new object[] { fullScreenElement, value }); } }
    ElementReference fullScreenElement;
}

<script>

    function setVisible(element, visible)
    {
        if(visible)
        {
            element.classList.remove("hidden")
        }
        else
        {
            element.classList.add("hidden")
        }
    }

</script>

<div class="full-screen hidden" @ref=fullScreenElement>
    <div class="loading-backdrop"></div>
    <i class="fa-solid fa-spinner fa-spin-pulse"></i>
</div>

<style>

    .full-screen{
        width:100vw;
        height:100vh;
        display:flex;
        justify-content:center;
        align-items:center;
        z-index:9999;
        position:absolute;
        top:0;
        left:0;
        color:white;
        font-size:8em;
    }
    .loading-backdrop{
        background-color:black;
        opacity:0.3;
        width:100%;
        height:100%;
        position:absolute;
    }

    .hidden {
        display: none;
    }
</style>